generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Usuario {
  id           Int       @id @default(autoincrement())
  nombre       String
  email        String    @unique
  nivel        String
  rol          String    @default("alumno")
  suscripcion  Boolean   @default(false)
  rutinas      Rutina[]
  creadoEn     DateTime  @default(now())
}


model Rutina {
  id        Int      @id @default(autoincrement())
  nombre    String
  tipo      String
  ejercicios String
  usuarioId Int
  usuario   Usuario  @relation(fields: [usuarioId], references: [id])
}
